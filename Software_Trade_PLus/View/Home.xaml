<UserControl x:Class="Software_Trade_PLus.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="675"
             xmlns:vm="clr-namespace:Software_Trade_PLus.ViewModel"
             Style="{StaticResource Page_Style}">

    <UserControl.DataContext>
        <vm:HomeVM/>
    </UserControl.DataContext>

    <Grid Background="{StaticResource PrimaryBackground}" Margin="0,0,0,0">
        <Grid Height="300" Width="650" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Image Source="/Resources/Images/Logo.png"
               Height="220" Margin="35,10,88,70"/>
            <TextBox Style="{StaticResource TextField}" Text="Welcome" FontSize="60" HorizontalAlignment="Left" Margin="321,197,0,0" VerticalAlignment="Top" Cursor="None"/>
        </Grid>
    </Grid>
</UserControl>
